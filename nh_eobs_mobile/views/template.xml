                    <label t-att-for="item['name']">
                        <t t-esc="item['label']"/>
                        <t t-if="'secondary_label' in item and item['secondary_label']">
                            <br/>
                            <span class="secondary-label">
                                <t t-esc="item['secondary_label']"/>
                            </span>
                        </t>
                    </label>
                    <input t-att-type="item['type']" t-att-name="item['name']" t-att-id="item['name']"
                           t-att-min="item['min']" t-att-max="item['max']" t-att-step="item['step']"
                           t-att-class="'exclude' if 'initially_hidden' in item and item['initially_hidden']==True else ''"
                           t-att-data-validation="item['validation'] if 'validation' in item else ''"
                           t-att-data-onchange="item['on_change'] if 'on_change' in item else ''"
                           t-att-data-required="item.get('required', 'false')"
                           t-att-data-necessary="item.get('necessary', 'true') if not item.get('initially_hidden') else 'false'"/>
                </div>
                <div class="input-body">
                    <span class="errors">
                        <t t-esc="item['errors'] if 'errors' in item and item['errors'] else ''"/>
                    </span>
                    <span class="help">
                        <t t-esc="item['info'] if 'info' in item and item['info'] else ''"/>
                    </span>
                    <t t-set="reference" t-value="item.get('reference')"/>
                    <t t-if="reference">
                        <button t-att-data-type="reference['type']" t-att-data-url="reference['url']"
                                t-att-data-title="reference['title']" class="button reference exclude">
                            <t t-esc="reference['label']"/>
                        </button>
                    </t>
                </div>
            </div>
        </template>

        <template name="Input box" t-name="nh_eobs_mobile.observation_data_text_input">
            <div t-att-class="'block obsField valHide' if item['initially_hidden']==True else 'block obsField'"
                 t-att-id="'parent_' + item['name']">
                <div class="input-header">
                    <label t-att-for="item['name']">
                        <t t-esc="item['label']"/>
                        <t t-if="'secondary_label' in item and item['secondary_label']">
                            <br/>
                            <span class="secondary-label">
                                <t t-esc="item['secondary_label']"/>
                            </span>
                        </t>
                    </label>
                </div>
                <div class="input-body">
                    <span class="help">
                        <t t-esc="item['info'] if 'info' in item and item['info'] else ''"/>
                    </span>
                    <textarea t-att-name="item['name']" t-att-id="item['name']"
                              t-att-class="'exclude' if item['initially_hidden']==True else ''"
                              t-att-data-validation="item['validation'] if 'validation' in item else ''"
                              t-att-data-onchange="item['on_change'] if 'on_change' in item else ''"
                              t-att-data-required="item.get('required', 'false')"
                              t-att-data-necessary="item.get('necessary', 'true') if not item.get('initially_hidden') else 'false'"></textarea>
                    <span class="errors">
                        <t t-esc="item['errors'] if 'errors' in item and item['errors'] else ''"/>
                    </span>
                    <t t-set="reference" t-value="item.get('reference')"/>
                    <t t-if="reference">
                        <button t-att-data-type="reference['type']" t-att-data-url="reference['url']"
