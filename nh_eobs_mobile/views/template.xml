-->
<openerp>
    <data>

        <template t-name="nh_eobs_mobile.base" name="Base layout">&lt;!DOCTYPE html&gt;
            <html>
                <head>
                    <title>Open-eObs</title>
                    <link rel="manifest" t-att-href="urls['manifest']"/>
                    <link t-att-href="urls['stylesheet']" rel="stylesheet" type="text/css"/>
                    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0, user-scalable=no"/>
                    <script src="/api/v1/routes" type="text/javascript"></script>
                    <script src="/nh_eobs_mobile/static/src/js/nhlib.js?version=3" type="text/javascript"></script>
                </head>
                <body>
                    <div class="header">
                        <div class="header-main block">
                            <img t-att-src="urls['logo']" class="logo"/>
                            <ul class="header-meta">
                                <li>
                                    <a t-att-href="urls['share_patient_list']" class="button back">Stand In</a>
                                </li>
                                <li class="scan_parent">
                                    <a href="#" class="button scan go">Scan</a>
                                </li>
                                <li class="logout">
                                    <a t-att-href="urls['logout']" class="button back">Logout</a>
                                </li>
                            </ul>
                        </div>
                        <ul class="header-menu two-col">
                            <t t-if="section=='task'">
                                <li>
                                    <a t-att-href="urls['task_list']" id="taskNavItem" class="selected">Tasks</a>
                                </li>
                                <li>
                                    <a t-att-href="urls['patient_list']" id="patientNavItem">Patients
                                        <t t-if="notification_count and notification_count &gt; 0">
                                            <span class="urgent-badge">
                                                <t t-esc="notification_count"/>
                                            </span>
                                        </t>
                                    </a>
                                </li>
                            </t>
                            <t t-if="section=='patient'">
                                <li>
                                    <a t-att-href="urls['task_list']" id="taskNavItem">
                                        Tasks
                                    </a>
                                </li>
                                <li>
                                    <a t-att-href="urls['patient_list']" id="patientNavItem" class="selected">
                                        Patients
                                        <t t-if="notification_count and notification_count &gt; 0">
                                            <span class="urgent-badge">
                                                <t t-esc="notification_count"/>
                                            </span>
                                        </t>
                                    </a>
                                </li>
                            </t>
                        </ul>
                    </div>
                    <t t-raw="0"/>
                    <t t-if="share_list">
                        <div class="share-footer">
                            <p class="user">
                                <t t-esc="username"/>
                            </p>
                            <ul class="header-menu two-col">
                                <li>
                                    <a href="#" class="share">Share</a>
                                </li>
                                <li>
                                    <a href="#" class="claim">Claim</a>
                                </li>
                                <li>
                                    <a href="/mobile/patients/">Cancel</a>
                                </li>
                            </ul>
                        </div>
                        <script type="text/javascript">
                            var share_button = document.getElementsByClassName('share')[0];
                            var claim_button = document.getElementsByClassName('claim')[0];
                            var select_all_button = document.getElementsByClassName('share_all')[0];
                            document.addEventListener('DOMContentLoaded', new window.NH.NHMobileShare(share_button,
                            claim_button, select_all_button), false);
                        </script>
                    </t>
                    <t t-if="share_list==None">
                        <div class="footer block">
                            <p class="user">
                                <t t-esc="username"/>
                            </p>
                        </div>
                    </t>
                    <script type="text/javascript">
                        var trigger_button = document.getElementsByClassName('scan')[0];
                        document.addEventListener('DOMContentLoaded', new window.NH.NHMobileBarcode(trigger_button),
                        false);
                    </script>
                </body>
            </html>
        </template>


        <template t-name="nh_eobs_mobile.patient_task_list" name="List of Tasks or Patients">
            <t t-call="nh_eobs_mobile.base">
                <div class="content">
                    <ul class="tasklist">
                        <t t-if="notifications">
                            <t t-foreach="notifications" t-as="notification">
                                <li style="display: none;">
                                    <a href="#" class="share_invite block" t-att-data-invite-id="notification['id']">
                                        <div class="task-meta" t-att-data-invite-id="notification['id']">
                                            <div class="task-right" t-att-data-invite-id="notification['id']">
                                                <p class="aside" t-att-data-invite-id="notification['id']">Accept</p>
                                            </div>
                                            <div class="task-left" t-att-data-invite-id="notification['id']">
                                                <i class="icon-alert" t-att-data-invite-id="notification['id']"></i>
                                                <t t-if="notification['message']">
                                                    <t t-esc="notification['message']"/>
                                                </t>
                                            </div>
                                        </div>
                                    </a>
                                </li>

                                <!--<li class="block share_invite" t-att-data-invite-id="notification['id']">-->
                                <!--<p class="urgent icon-alert" t-att-data-invite-id="notification['id']"><t t-if="notification['message']"><t t-esc="notification['message']"/></t><br/></p>-->
                                <!--</li>-->
                            </t>
                        </t>
                        <t t-foreach="items" t-as="item">
                            <li style="display: none;">
                                <a t-att-href="item['url']" t-att-class="item['color']+' block'">
                                    <div class="task-meta">
                                        <div class="task-right">
                                            <p class="aside">
                                                NEWS: <t t-esc="item['deadline_time']"/>
                                            </p>
                                            <t t-if="'follower_ids' in item and user_id in item['follower_ids']">
                                                <p class="aside">Claim</p>
                                            </t>
                                        </div>
                                        <div class="task-left">
                                            <t t-if="'notification' in item and item['notification']==True">
                                                <i class="icon-alert"></i>
                                            </t>
                                            <strong>
                                                <t t-esc="item['full_name']"/>
                                            </strong>
                                            <t t-if="item['ews_score']!='False'">(
                                                <t t-esc="item['ews_score']"/>
                                                <t t-if="item['ews_trend']!='False'">
                                                    <i t-att-class="'icon-' + item['ews_trend'] + '-arrow'"></i>
                                                </t>
                                                )
                                            </t>
                                            <br/>
                                            <em><t t-esc="item['location']"/>,
                                                <t t-esc="item['parent_location']"/>
                                            </em>
                                        </div>
                                    </div>
                                    <div class="task-meta">
                                        <p class="taskInfo">
                                            <t t-if="item['summary']">
                                                <t t-esc="item['summary']"/>
                                            </t>
                                            <br/>
                                        </p>
                                    </div>
                                </a>
                            </li>
                        </t>
                        <t t-if="followed_items">
                            <li>
                                <hr/>
                            </li>
                            <li t-foreach="followed_items" t-as="item">
                                <a t-att-href="item['url']" t-att-class="item['color']+' block'">
                                    <div class="task-meta">
                                        <div class="task-right">
                                            <p class="aside">
                                                <t t-esc="item['deadline_time']"/>
                                            </p>
                                        </div>
                                        <div class="task-left">
                                            <t t-if="'notification' in item and item['notification']==True">
                                                <i class="icon-alert"></i>
                                            </t>
                                            <strong>
                                                <t t-esc="item['full_name']"/>
                                            </strong>
                                            (
                                            <t t-esc="item['ews_score']"/>
                                            <i t-att-class="item['trend_icon']"></i>)
                                            <br/>
                                            <em><t t-esc="item['location']"/>,
                                                <t t-esc="item['parent_location']"/>
                                            </em>
                                        </div>
                                    </div>
                                    <div class="task-meta">
                                        <p class="taskInfo">
                                            <t t-if="item['summary']">
                                                <t t-esc="item['summary']"/>
                                            </t>
                                            <br/>
                                        </p>
                                    </div>
                                </a>
                            </li>
                        </t>
                    </ul>
                </div>
                <script type="text/javascript">
                    var patient_list = document.getElementsByClassName('tasklist')[0];
                    document.addEventListener('DOMContentLoaded', new window.NH.NHMobileShareInvite(patient_list),
                    false);
                </script>
            </t>
        </template>

        <template t-name="nh_eobs_mobile.share_patients_list" name="List of Patients to Share">
            <t t-call="nh_eobs_mobile.base">
                <div class="content share-content">
                    <form id="handover_form">
                        <ul class="tasklist sharelist">
                            <li>
                                <a href="#" class="share_all" mode="select">Select all</a>
                            </li>
                            <t t-foreach="items" t-as="item">
                                <li>
                                    <label t-att-class="'shared' if item.get('invited_users') else ''">
                                        <input type="checkbox" t-att-name="'patient_share_'+str(item['id'])"
                                               t-att-value="item['id']" class="patient-share"/>
                                        <div t-att-class="item['color']+' block'">
                                            <div class="task-meta">
                                                <div class="task-right">
                                                    <p class="aside">
                                                        <t t-esc="item['deadline_time']"/>
                                                    </p>
                                                </div>
                                                <div class="task-left">
                                                    <t t-if="'notification' in item and item['notification']==True">
                                                        <i class="icon-alert"></i>
                                                    </t>
                                                    <strong>
                                                        <t t-esc="item['full_name']"/>
                                                    </strong>
                                                    <t t-if="item['ews_score']!='False'">(
                                                        <t t-esc="item['ews_score']"/>
                                                        <t t-if="item['ews_trend']!='False'">
                                                            <i t-att-class="item['trend_icon']"></i>
                                                        </t>
                                                        )
                                                    </t>
                                                    <br/>
                                                    <em><t t-esc="item['location']"/>,
                                                        <t t-esc="item['parent_location']"/>
                                                    </em>
                                                </div>
                                            </div>
                                            <div class="task-meta">
                                                <p class="taskInfo">
                                                    <t t-if="item.get('invited_users')">Shared with:
                                                        <t t-esc="item['invited_users']"/>
                                                    </t>
                                                    <br/>
                                                    <t t-if="item.get('followers')">Following:
                                                        <t t-esc="item['followers']"/>
                                                    </t>
                                                    <br/>
                                                </p>
                                            </div>
                                        </div>
                                    </label>
                                </li>
                            </t>
                        </ul>
                    </form>
                </div>
            </t>
        </template>

        <template name="Observation / Notification Data Input Screen" t-name="nh_eobs_mobile.data_input_screen">
            <t t-call="nh_eobs_mobile.base">
                <div class="content">
                    <h2 id="patientName" class="block">
                        <a t-att-href="patient['url']" t-att-patient-id="form['patient-id']">
                            <t t-esc="patient['name']"/>
                            <i class="icon-info" t-att-patient-id="form['patient-id']"></i>
                        </a>
                    </h2>
                    <t t-foreach="view_description" t-as="view_element">
                        <t t-set="inputs" t-value="view_element.get('inputs', [])"/>
                        <t t-set="view_data" t-value="view_element.get('view_data', {})"/>
                        <t t-if="view_element.get('type')=='task'">
                            <t t-if="task_valid">
                                <t t-call="nh_eobs_mobile.notification_confirm_cancel"/>
                            </t>
                            <t t-if="not task_valid">
                                <t t-call="nh_eobs_mobile.notification_not_valid"/>
                            </t>
                        </t>
                        <t t-if="view_element.get('type')=='form'">
                            <t t-call="nh_eobs_mobile.observation_entry"/>
                        </t>
                        <t t-if="view_element.get('type')=='template'">
                            <t t-call="{{view_element.get('template')}}"/>
                        </t>
                    </t>
                    <script type="text/javascript">
                        document.addEventListener('DOMContentLoaded', new window.NH.NHMobileForm(), false);
                    </script>
                </div>
            </t>
        </template>

        <template t-name="nh_eobs_mobile.escalations_form" name="Escalations to be Processed">
            <t t-call="nh_eobs_mobile.base">
                <div class="content">
                    <h2 id="patientName" class="block">
                        <t t-esc="data['patient']['name']"/>
                    </h2>

                    <form method="POST" id="obsForm" action="/mobile/confirm_escalations">
                        <div>
                            <t t-set="i" t-value="0"/>
                            <div t-foreach="data['tasks']" t-as="task">
                                <div class="obsField block">
                                    <div class="input-header">
                                        <t t-esc="task['task_name']"/>
                                    </div>
                                    <fieldset>
                                        <div class="input-body escalations">
                                            <div class="radio_wrapper">
                                            <input type="hidden" t-att-name="task['task_model']"
                                                   t-att-value="task['task_id']"/>
                                            <input type="radio" t-att-name="task['task_id']"
                                                   t-att-id="task['task_id']" value="yes" onclick="yesnoCheck(this)"
                                                   t-att-checked="'checked' if task['task_model']=='nh.clinical.notification.hca' else ''"
                                                   t-att-style="'display: none;' if task['task_model']=='nh.clinical.notification.hca' else ''"
                                                   required="required"
                                            />
                                            <label t-att-for="task['task_id']"
                                                   t-att-style="'display: none;' if task['task_model']=='nh.clinical.notification.hca' else ''"
                                            >
                                                Yes
                                            </label>
                                            <input type="radio" t-att-name="task['task_id']"
                                                   t-att-id="task['task_id']" value="no" onclick="yesnoCheck(this)"
                                                   t-att-style="'display: none;' if task['task_model']=='nh.clinical.notification.hca' else ''"
                                                    required="required"
                                            />
                                            <label t-att-for="task['task_id']"
                                                   t-att-style="'display: none;' if task['task_model']=='nh.clinical.notification.hca' else ''"
                                            >
                                                No
                                            </label>
                                                </div>
                                            <t t-if="task['input_fields']">
                                                <div t-att-id="str(task['task_id'])+'_wrapper'">
                                                    <t t-foreach="task['input_fields']" t-as="input_field">
                                                        <t t-if="input_field['type'] == 'selection'">
                                                                <label t-att-for="str(task['task_id'])+'_value_selection'" class="text_input" t-att-id="str(task['task_id'])+'_value_selection_label'">
                                                                    <t t-esc="input_field['label']"/>
                                                                </label>
                                                                <select t-att-name="str(task['task_id'])+'_value_selection'" t-att-id="str(task['task_id'])+'_value_selection'" onclick="doctorSelection(this)">
                                                                    <option value="">Please select...</option>
                                                                    <t t-foreach="input_field['values']" t-as="value">
                                                                        <option t-att-value="value[0]">
                                                                            <t t-esc="value[1]"/>
                                                                        </option>
                                                                    </t>
                                                                </select>
                                                        </t>
                                                        <t t-if="input_field['type'] == 'text_input'">
                                                                <label t-att-for="str(task['task_id'])+'_value_text'" class="text_input" t-att-id="str(task['task_id'])+'_value_text_label'">
                                                                    <t t-esc="input_field['label']"/>
                                                                </label>
                                                                <input type="text" t-att-name="str(task['task_id'])+'_value_text'" t-att-id="str(task['task_id'])+'_value_text'" oninput="doctorFreeText(this)"/>
                                                        </t>
                                                        <t t-if="input_field['type'] == 'checkbox'">
                                                                <label t-att-for="str(task['task_id'])+'_value_checkbox'" class="text_input" t-att-id="str(task['task_id'])+'_value_checkbox_label'">
                                                                    <t t-esc="input_field['label']"/>
                                                                </label>
                                                                <input type="checkbox" t-att-name="str(task['task_id'])+'_value_checkbox'" t-att-id="str(task['task_id'])+'_value_checkbox'"/>
                                                        </t>
                                                    </t>
                                                </div>
                                            </t>
                                            <div t-att-id="str(task['task_id'])+'_cancel_wrapper'" style="display: none;">
                                                <span>Reason not done:</span>
                                                <select t-att-name="str(task['task_id'])+'_cancel'" t-att-id="str(task['task_id'])+'_cancel'" class="input-spacer">
                                                    <option value="">Please select...</option>
                                                    <t t-foreach="data['cancel_reasons']" t-as="reason">
                                                        <option t-att-value="reason['id']" >
                                                            <t t-esc="reason['name']"/>
                                                        </option>
                                                    </t>
                                                </select>
                                            </div>
                                        </div>
                                    </fieldset>
                                </div>
                            </div>
                            <div class="block obsSubmit" id="parent_submitButton">
                                <input type="submit" value="Submit" class="exclude" id="submitButton"/>
                            </div>
                        </div>
                    </form>
                </div>
            </t>
        </template>

        <template name="Notifcation No Longer Valid Screen" t-name="nh_eobs_mobile.notification_not_valid">
            <form t-att-action="form['confirm_url']" method="POST" t-att-task-id="form['task-id']"
                  t-att-patient-id="form['patient-id']" id="obsForm" t-att-data-source="form['source']"
                  t-att-class="'obsChange block' if form['type']=='frequency' else 'block'"
                  t-att-data-type="form['type']" ajax-action="confirm_clinical_notification"
                  t-att-ajax-args="'{id}'.format(id=form['task-id'])">
                <h3>This
                    <t t-esc="name"/>
                    task is no longer valid
                </h3>
                <input type="hidden" name="taskId" t-att-value="form['task-id']"/>
                <input type="hidden" name="startTimestamp" id="startTimestamp" t-att-value="form['start']"/>
                <t t-if="task_valid">
                    <div class="block obsSubmit" id="parent_submitButton">
                        <input type="submit" value="Submit" class="exclude" id="submitButton"/>
                    </div>
                </t>
                <t t-if="not task_valid">
                    <p class="obsConfirm">
                        <input type="reset" t-att-ajax-action="form.get('cancel_url', '')"
                               class="button cancelButton exclude" id="cancelSubmit" value="Cancel action"/>
                    </p>
                </t>
            </form>
        </template>

        <template name="Notification Confirm/Cancel Screen" t-name="nh_eobs_mobile.notification_confirm_cancel">
            <form t-att-action="form['confirm_url']" method="POST" t-att-task-id="form['task-id']"
                  t-att-patient-id="form['patient-id']" id="obsForm" t-att-data-source="form['source']"
                  t-att-class="'obsChange block' if form['type']=='frequency' else 'block'"
                  t-att-data-type="form['type']" ajax-action="confirm_clinical_notification"
                  t-att-ajax-args="'{id}'.format(id=form['task-id'])">
                <h3>Confirm action taken?</h3>
                <t t-if="view_data.get('title')">
                    <p>
                        <t t-raw="view_data.get('title')"/>
                    </p>
                </t>
                <t t-if="form.get('type') == 'frequency'">
                    <div class="current-frequency" style="float: right;">
                        Current Frequency<br/>
                        <t t-esc="form.get('news_frequency_string')"/>
                    </div>
                </t>
                <t t-if="not view_data.get('title')">
                    <p>Press the button below to confirm that you have completed the task
                        <t t-esc="name"/>
                    </p>
                </t>
                <t t-raw="0"/>
                <t t-if="len(inputs) > 0">
                    <div t-foreach="inputs" t-as="item">
                        <t t-if="item['type']=='selection'">
                            <t t-call="nh_eobs_mobile.observation_data_select"/>
                        </t>
                        <t t-if="item['type']=='text'">
                            <t t-call="nh_eobs_mobile.observation_data_text_input"/>
                        </t>
                    </div>
                </t>
                <input type="hidden" name="taskId" t-att-value="form['task-id']"/>
                <input type="hidden" name="startTimestamp" id="startTimestamp" t-att-value="form['start']"/>
                <t t-if="task_valid">
                    <div class="block obsSubmit" id="parent_submitButton">
                        <input type="submit" t-att-value="view_data.get('submit_title', 'Submit')" class="exclude"
                               id="submitButton"/>
                    </div>
                </t>
                <t t-if="cancellable">
                    <p class="obsConfirm">
                        <input type="reset" t-att-ajax-action="form.get('cancel_url', '')"
                               class="button cancelButton exclude" id="cancelSubmit" value="Cancel action"/>
                    </p>
                </t>
            </form>
        </template>

        <template name="Observation Data Entry Screen" t-name="nh_eobs_mobile.observation_entry">
            <form t-att-action="form['action']" method="POST" t-att-data-type="form['type']"
                  t-att-task-id="form['task-id']" t-att-patient-id="form['patient-id']" id="obsForm"
                  t-att-data-source="form['source']"
                  t-att-ajax-action="'calculate_obs_score' if 'obs_needs_score' in form and form['obs_needs_score'] else 'json_task_form_action' if section == 'task' else 'json_patient_form_action'"
                  t-att-ajax-args="'{type},{id}'.format(type=form['type'], id=form['task-id'] if section == 'task' else form['patient-id'])"
                  t-att-ajax-partial-action="form.get('partial_flow')">
                <div t-foreach="inputs" t-as="item">
                    <t t-if="item['name']=='systolic_sitting'">
                        <h3 class="block">Lying/Sitting Blood Pressure</h3>
                    </t>
                    <t t-if="item['name']=='systolic_standing'">
                        <h3 class="block valHide" id="standing_title">Standing Blood Pressure</h3>
                    </t>
                    <t t-if="item['type']=='number'">
                        <t t-call="nh_eobs_mobile.observation_data_input"/>
                    </t>
                    <t t-if="item['type']=='text'">
                        <t t-call="nh_eobs_mobile.observation_data_text_input"/>
                    </t>
                    <t t-if="item['type']=='selection'">
                        <t t-call="nh_eobs_mobile.observation_data_select"/>
                    </t>
                    <t t-if="item['type']=='multiselect'">
                        <t t-call="nh_eobs_mobile.observation_data_multiselect"/>
                    </t>
                </div>
                <t t-if="section=='task'">
                    <input type="hidden" name="taskId" t-att-value="form['task-id']"/>
                </t>
                <input type="hidden" name="startTimestamp" id="startTimestamp" t-att-value="form['start']"/>
                <t t-if="task_valid">
                    <div class="block obsSubmit" id="parent_submitButton">
                        <input type="submit" value="Submit" class="exclude" id="submitButton"/>
                    </div>
                </t>
                <t t-if="not task_valid">
                    <p class="obsConfirm">
                        <input type="reset" t-att-ajax-action="form.get('cancel_url', '')"
                               class="button cancelButton exclude" id="cancelSubmit" value="Cancel action"/>
                    </p>
                </t>
            </form>
        </template>


        <template name="Selection box input" t-name="nh_eobs_mobile.observation_data_select">
            <div t-att-class="'block obsSelectField valHide' if 'initially_hidden' in item and item['initially_hidden']==True else 'block obsSelectField'"
                 t-att-id="'parent_'+item['name']">
                <div class="input-header">
                    <label t-att-for="item['name']">
                        <t t-esc="item['label']"/>
                    </label>
                </div>
                <div class="input-body">
                    <select t-att-id="item['name']" t-att-name="item['name']"
                            t-att-class="'exclude' if 'initially_hidden' in item and item['initially_hidden']==True else ''"
                            t-att-data-onchange="'{0}'.format(item['on_change']) if 'on_change' in item else ''"
                            t-att-data-required="item.get('required', 'false')"
                            t-att-data-necessary="item.get('necessary', 'true') if not item.get('initially_hidden') else 'false'">
                        <option value="">Please Select</option>
                        <t t-foreach="item['selection_options']" t-as="option">
                            <option t-att-value="option['value']"
                                    t-att-selected="'selected' if 'default_value' in option and option['default_value'] else ''">
                                <t t-esc="option['label']"/>
                            </option>
                        </t>
                    </select>
                    <span class="errors">
                        <t t-esc="item['errors'] if 'errors' in item and item['errors'] else ''"/>
                    </span>
                    <span class="help">
                        <t t-esc="item['info'] if 'info' in item and item['info'] else ''"/>
                    </span>
                    <t t-set="reference" t-value="item.get('reference')"/>
                    <t t-if="reference">
                        <button t-att-data-type="reference['type']" t-att-data-url="reference['url']"
                                t-att-data-title="reference['title']" class="button reference exclude">
                            <t t-esc="reference['label']"/>
                        </button>
                    </t>
                </div>
            </div>
        </template>

        <template name="Input box" t-name="nh_eobs_mobile.observation_data_input">
            <div t-att-class="'block obsField valHide' if 'initially_hidden' in item and item['initially_hidden']==True else 'block obsField'"
