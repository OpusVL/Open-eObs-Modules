        <template name="Checkboxes" t-name="nh_eobs_mobile.observation_data_multiselect">
            <div t-att-class="'block obsSelectField valHide' if item.get('initially_hidden')==True else 'block obsSelectField'"
                 t-att-id="'parent_{0}'.format(item.get('name'))">
                <div class="input-header">
                    <label t-att-for="item.get('name')">
                        <t t-esc="item.get('label')"/>
                        <t t-if="item.get('secondary_label')">
                            <br/>
                            <span class="secondary-label">
                                <t t-esc="item.get('secondary_label')"/>
                            </span>
                        </t>
                    </label>
                </div>
                <div class="input-body">
                    <t t-set="options" t-value="item.get('selection')"/>
                    <ul class="checklist">
                        <li t-foreach="options" t-as="option">
                            <input type="checkbox" t-att-name="item.get('name')" t-att-value="option[0]"
                                   class="checklist_box" t-att-data-required="item.get('required', 'false')"
                                   t-att-data-necessary="item.get('necessary', 'true') if not item.get('initially_hidden') else 'false'"/>
                            <label>
                                <t t-esc="option[1]"/>
                            </label>
                        </li>
                    </ul>
                    <span class="errors">
                        <t t-esc="item.get('errors', '')"/>
                    </span>
                    <span class="help">
                        <t t-esc="item.get('info', '')"/>
                    </span>
                    <t t-set="reference" t-value="item.get('reference')"/>
